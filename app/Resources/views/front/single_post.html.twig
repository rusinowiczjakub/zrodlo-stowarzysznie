{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/about.css') }}" />
    <link rel="stylesheet" href="{{ asset('assets/css/actuals.css') }}" />
    <link rel="stylesheet" href="{{ asset('assets/css/post.css') }}" />
    <link rel="stylesheet" href="{{ asset('assets/css/lightbox.min.css') }}" />
{% endblock %}

{% block body %}
    <section class="hero-wrap hero-wrap-2" style="background-image: url({{ asset('assets/images/bg.jpg') }});">
        <div class="overlay"></div>
        <div class="container">
            <div class="row no-gutters slider-text align-items-center justify-content-center">
                <div class="col-md-9 ftco-animate text-center">
                    <h1 class="mb-2 bread">{{post.header}}</h1>
                </div>
            </div>
        </div>
    </section>
    <section class="ftco-section">
        <div class="container">
            <div class="row">

            </div>
            <div class="row">
                <div class="col-lg-12 ftco-animate">
                    {% for image in post.images | slice(0, 1) %}
{#                        <p>#}
                            <img style="width: 100%" src="{{ asset("uploads/" ~ image.name ) }}" alt="" class="img-fluid">
{#                        </p>#}
                    {% endfor %}

                    {% autoescape false %}
                        <div class="mt-5">{{ post.content }}</div>
                    {% endautoescape %}
                </div> <!-- .col-md-8 -->

            </div>
        </div>
    </section>
    <section class="ftco-section ftco-no-pb">
        <div class="container">
            <div class="row">
                {% for image in post.images %}
                <div class="col-md-6 col-lg-3 ftco-animate">
                    <div class="staff">
                        <div class="img-wrap d-flex align-items-stretch">
                            <a href="{{ asset("uploads/" ~ image.name) }}" class="img align-self-stretch" data-lightbox="gallery">
                                <img src={{ asset("uploads/" ~ image.name) }}/>
                            </a>
                        </div>
                        <div class="text pt-3 text-center">
                            <div class="faded">
                                <ul class="ftco-social text-center">
                                    <li class="ftco-animate"><a href="https://www.facebook.com/pages/category/Community-Organization/Stowarzyszenie-%C5%B9r%C3%B3d%C5%82o-160272364071646/"><span class="icon-facebook"></span></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>



